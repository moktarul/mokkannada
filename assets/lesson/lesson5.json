        { "speaker": "B", "kannada": "ninnedu", "english": "It is yesterday's" },
        { "speaker": "B", "kannada": "idu ivattinadu", "english": "This one is today's" },
        { "speaker": "A", "kannada": "ivattina peeparalli een viśeeṣa?", "english": "What is special in today's paper?" },
        { "speaker": "B", "kannada": "viśeeṣa eenuu illa", "english": "There is nothing special." },
        { "speaker": "A", "kannada": "kannaḍadalli oḷḷe peeparu yaavdu?", "english": "Which newspaper is good in Kannada?" },
        { "speaker": "B", "kannada": "'vaarta' kannaḍadalli oḷḷe peeparu", "english": "'Varta' is a good paper in Kannada." },
        { "speaker": "A", "kannada": "'patrike' aṣṭu oḷḷedalvaa?", "english": "Isn't 'Patrike' that good?" },
        { "speaker": "B", "kannada": "aduu oḷḷeedu", "english": "It is also good." },
        { "speaker": "B", "kannada": "aa eraḍaralli 'vaartha' oḷḷeedu", "english": "Of the two 'Varta' is better." }
      ]
